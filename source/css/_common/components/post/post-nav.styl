.post-nav {
  overflow: hidden;
  margin-top: 60px;
  padding: 10px 0;
  white-space: nowrap;
  border-top: 1px solid $gainsboro;
}

.post-nav-item {
  white-space: nowrap;
  overflow: hidden;

  a {
    position: relative;
    display: inline-block;
    line-height: 25px;
    font-size: 14px;
    color: $link-color;
    border-bottom: none;

    &:hover {
      color: $link-hover-color;
      border-bottom: none;
    }

    &:active { top: 1px; }

    i { font-size: 12px; }
  }

}

